#include <stdio.h>
#define PI 3.14159 

int main() {
  float raio, area, volume;

  printf("Digite o valor do raio da esfera: ");
  scanf("%f", &raio);


  area = 4 * PI * raio * raio;

  
  volume = (4.0/3.0) * PI * raio * raio * raio;

  printf("A área da superfície da esfera é: %.2f", area);
  printf("O volume da esfera é: %.2f", volume);

  return 0;
}
